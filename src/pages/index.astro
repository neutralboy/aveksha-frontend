---
import BaseLayout from "../layouts/BaseLayout.astro"
---
<BaseLayout title="Home" >
	<div class="flex justify-center bg-offWhite" >
		<div class="lg:container flex justify-between" >
			<div class="w-full m-4 my-auto px-8" >
			<div class="my-auto" >
				<div>
					<h2 class="mx-8 text-4xl text-blue-900 font-display text-center" >
						Help bring healthcare to rural families in India
					</h2>
					<h3 class="mx-20 text-gray-700 text-lg text-center mt-3" >
						Join our mission in bringing quality healthcare to rural populations of India like our 1000+ sponsors
					</h3>
				</div>

				<div class="w-3/5 mx-auto border border-gray-400 mt-3 rounded-md shadow bg-white" >
					<div class="bg-yellow-50 py-4 uppercase font-bold text-base text-center text-gray-700 border-b-gray-400 border" >
						Choose an amount to give
					</div>
					<div class="grid grid-cols-3 px-4 mt-4 text-gray-700" >
						<div class="p-1" >
							<button class="p-3 text-lg text-white bg-blue-900 w-full rounded" >
								$100
							</button>
						</div>

						<div class="p-1" >
							<button class="bg-gray-200 p-3 w-full text-lg rounded" >
								$50
							</button>
						</div>

						<div class="p-1" >
							<button class="bg-gray-200 p-3 w-full text-lg rounded" >
								$10
							</button>
						</div>
					</div>

					<div class="my-1 flex justify-center text-gray-700 px-5" >
						<div class="w-1/3" >
							<button class="bg-gray-200 p-3 w-full text-lg rounded" >
								$5
							</button>
						</div>
						<div class="hidden w-full ml-2" >
							<p class="block my-auto text-2xl" >$</p>
							<input placeholder="Other amount" class="block w-1/2 appearance-none border-b-2 py-1 px-1 bg-white text-gray-700 placeholder-gray-350 text-lg focus:outline-none focus:ring-0  focus:border-b-gray-400" >
						</div>
						<div class="border border-gray-300 w-full text-center p-3 rounded bg-gray-200 ml-2" >
							Other amount
						</div>
					</div>

					<div class="flex justify-center my-4 mx-4 border-2 border-gray-300 rounded text-sm" >
						<button class="block w-full border-r-2 border-gray-300 py-1 bg-blue-900 text-white" >Monthly</button>
						<button class="block w-full border-r-2 border-gray-300 py-1">Annual</button>
						<button class="block w-full border-gray-300 py-1">One time</button>
					</div>

					<div class="mx-4 my-3" >
						<button class="w-full py-2 bg-blue-900 rounded text-lg text-white">
							DONATE
						</button>
					</div>

					<div class="flex justify-center" >
						<a href="/donate" class="inline-block mx-auto text-gray-600 text-sm text-center font-bold border-b-gray-400 border-b mb-4" >
							Other ways to give
						</a>
					</div>
				</div>

				</div>


			</div>
			<div class="w-full" >
				<img alt="Aveksha's work" class="h-5/6" src="https://res.cloudinary.com/poorna/image/upload/v1642227357/aveksha/500px_Square_2.png" >
			</div>
		</div>
	</div>
	<!-- BAND -->
	<div style="background: #6CD4FF; background: -webkit-linear-gradient(to left, #6CD4FF, #8B80F9); background: linear-gradient(to left, #6CD4FF, #8B80F9); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */" class="bg-gray-300 p-4" >
		<div class="flex my-auto" >
